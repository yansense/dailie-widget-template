{
  "name": "dailie-widget-template",
  "private": true,
  "version": "0.0.0",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "mkdir -p dist && concurrently \"NODE_ENV=production pnpm run watch\" \"pnpm run preview\"",
    "build": "NODE_ENV=production node scripts/build.js \"$npm_config_component\"",
    "watch": "node scripts/watch.js",
    "preview": "vite preview",
    "lint": "biome lint",
    "lint:fix": "biome lint --write",
    "format": "biome format --write",
    "check": "biome check --write"
  },
  "dependencies": {
    "dailie-widget-sdk": "git+https://github.com/yansense/dailie-widget-sdk.git#v2.0.0-alpha.8",
    "framer-motion": "^12.23.26",
    "lucide-react": "^0.555.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "babel-plugin-react-compiler": "^1.0.0",
    "chokidar": "^5.0.0",
    "concurrently": "^9.2.1",
    "globals": "^16.5.0",
    "typescript": "~5.9.3",
    "vite": "npm:rolldown-vite@7.2.5"
  },
  "overrides": {
    "vite": "npm:rolldown-vite@7.2.5"
  }
}